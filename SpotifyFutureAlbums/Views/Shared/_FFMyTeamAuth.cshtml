@model SpotifyFutureAlbums.ViewModels.AllAPIDetails

@*Fantasy Football Auth*@
<section class="bg-light page-section" id="services">
    <div class="container" id="bottombottom">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase"><i class="fas fa-lock" style="color:#f1353a"></i> Authenticated Team Data <i class="fas fa-lock" style="color:#f1353a"></i></h2>
                <h3 class="section-subheading text-muted">A POST request to the API which returns cookies that are used in the follow up GET request https://fantasy.premierleague.com/my-team</h3>
                <table class="table table-bordered table-striped">
                    <tr>
                        <th> @Html.DisplayNameFor(model => model.MyTeamRootObject.transfers.Bank) </th>
                        <th> @Html.DisplayNameFor(model => model.MyTeamRootObject.transfers.Cost) </th>
                        <th> @Html.DisplayNameFor(model => model.MyTeamRootObject.transfers.Limit) </th>
                        <th> @Html.DisplayNameFor(model => model.MyTeamRootObject.transfers.Made) </th>
                        <th> @Html.DisplayNameFor(model => model.MyTeamRootObject.transfers.Status) </th>
                        <th> @Html.DisplayNameFor(model => model.MyTeamRootObject.transfers.Value) </th>
                    </tr>
                    <tr>
                        <td> @Html.DisplayFor(m => m.MyTeamRootObject.transfers.Bank) </td>
                        <td> @Html.DisplayFor(m => m.MyTeamRootObject.transfers.Cost) </td>
                        <td> @Html.DisplayFor(m => m.MyTeamRootObject.transfers.Limit) </td>
                        <td> @Html.DisplayFor(m => m.MyTeamRootObject.transfers.Made) </td>
                        <td> @Html.DisplayFor(m => m.MyTeamRootObject.transfers.Status) </td>
                        <td> @Html.DisplayFor(m => m.MyTeamRootObject.transfers.Value) </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</section>