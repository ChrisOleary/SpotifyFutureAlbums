@model SpotifyFutureAlbums.ViewModels.AllAPIDetails

@*Fantasy Football Auth*@
<section class="bg-light page-section" id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">
                    <i class="fas fa-lock" style="color:#f1353a"></i> 
                        Authenticated Team Data 
                    <i class="fas fa-lock" style="color:#f1353a"></i>
                </h2>
                <h3 class="section-subheading text-muted">
                    A POST request to the API which returns cookies that are used in the follow up GET request at https://fantasy.premierleague.com/my-team
                </h3>
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>Element</th>
                        <th>Position</th>
                        <th>Is Captain</th>
                    </tr>
                    @foreach (var pick in Model.MyTeamRootObject.picks)
                    {
                    <tr>
                        <td>
                            @pick.element
                        </td>
                        <td>
                            @pick.position
                        </td> 
                        <td>
                            @pick.is_captain
                        </td>
                            
                    </tr>
                    }
                    </table>  
            </div>
        </div>
    </div>
</section>