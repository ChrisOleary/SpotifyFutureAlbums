@model SpotifyFutureAlbums.Models.AlwaysSunnyObject
        @*Always Sunny API*@
<section class="page-section" id="about">
    <div class="container" id="divTable">
        <script src="~/Scripts/jquery-3.5.0.min.js" type="text/javascript"></script>
        <script src="~/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>

        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">Always Sunny In Philadelphia <i class="fas fa-sun" style="color:#fed136;"></i></h2>
                <h3 class="section-subheading text-muted">One of my favourite shows: A random quote from the <a href="http://www.sunnyquotes.net/api/">public ASIP API site</a></h3>
            </div>
            <div class="col-lg-12 text-center">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Quote</th>
                            <th>Who</th>
                            <th>Episode</th>
                            <th>Gimmie another!</th>
                        </tr>
                    </thead>
                    <tr>
                        <td>"@Html.DisplayFor(m => m.sqQuote)" </td>
                        <td> @Html.DisplayFor(m => m.sqWho) </td>
                        <td> @Html.DisplayFor(m => m.sqEp) </td>
                        <td>
                            @* Reload the api request from the HomeController using AJAX *@
                            @Ajax.ActionLink(" ", "GetQuote", null, new AjaxOptions
                                                {
                                                    HttpMethod = "GET",
                                                    InsertionMode = InsertionMode.Replace,
                                                    UpdateTargetId = "divTable"
                                                }, 
                                                new 
                                                { @class = "btn btn-success", @id = "myActionLinkId" })
                            <script>$("#myActionLinkId").prepend("<i class='fas fa-sync-alt'></i> ");</script>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</section>
<script src="http://sunnyquotes.net/api/sq-api.js?id=MyElement&ep=false&click=true&speed=1500" id="sq-js" type="text/javascript" charset="utf-8"></script>